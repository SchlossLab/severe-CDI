# Generate subsample shared files, 2D nmds files, and PCoA files
# Decided subsampling parameter based on count.groups results.
set.dir(input=data/plate53_mothur, output=data/plate53_mothur, seed=19760620)

# Shorten filenames
rename.file(taxonomy=cdi.trim.contigs.good.unique.good.filter.unique.precluster.pick.pick.opti_mcc.0.03.cons.taxonomy, shared=cdi.trim.contigs.good.unique.good.filter.unique.precluster.pick.pick.opti_mcc.shared)

# Subsample data
sub.sample(shared=cdi.opti_mcc.shared, size=5000)

rarefaction.single(shared=cdi.opti_mcc.shared, calc=sobs, freq=100)
summary.single(shared=cdi.opti_mcc.shared, calc=nseqs-coverage-invsimpson-shannon-sobs, subsample=5000)
dist.shared(shared=cdi.opti_mcc.shared, calc=Jensen-Shannon Divergence, subsample=5000, processors=10)

#Generate PCoA based on Jensen-Shannon Divergence
pcoa(phylip=cdi.opti_mcc.braycurtis.0.03.lt.ave.dist)
